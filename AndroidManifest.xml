<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.tetuo41.arnovel"
    android:versionCode="1"
    android:versionName="1.0" >
    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="14" />
    
	<uses-permission android:name="android.permission.CAMERA"/>
 	<uses-feature android:name="android.hardware.camera"/>
    <uses-feature android:name="android.hardware.autofocus"/>
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION"/>
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.ACCESS_MOCK_LOCATION"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    
    <application
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:allowBackup="true"
        android:theme="@style/AppTheme" >
        
        <activity
            android:name=".TopActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait"
            android:restoreAnyVersion="true"
            android:theme="@style/app_theme"
			android:configChanges="orientation|keyboard|keyboardHidden" >
            
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        
        <activity
            android:name=".StampLogActivity"
            android:screenOrientation="portrait"
            android:theme="@android:style/Theme.Light"
            android:restoreAnyVersion="true"
			android:configChanges="orientation|keyboard|keyboardHidden" >
        </activity>
        <activity
            android:name=".StampLogDetailActivity"
            android:screenOrientation="portrait"
            android:theme="@android:style/Theme.Light"
            android:restoreAnyVersion="true"
			android:configChanges="orientation|keyboard|keyboardHidden" >
        </activity>
        
        <activity
            android:name=".StageSelectActivity"
            android:screenOrientation="portrait"
            android:theme="@android:style/Theme.Light"
            android:restoreAnyVersion="true"
			android:configChanges="orientation|keyboard|keyboardHidden" >
        </activity>
        <activity
            android:name=".CameraPreviewActivity"
            android:screenOrientation="portrait"
            android:restoreAnyVersion="true"
			android:configChanges="orientation|keyboard|keyboardHidden" >
        </activity>
		<activity
            android:name=".NovelIntroActivity"
            android:screenOrientation="portrait"
            android:restoreAnyVersion="true"
            android:theme="@android:style/Theme.Translucent"
			android:configChanges="orientation|keyboard|keyboardHidden" >
        </activity>
		<activity
            android:name=".NovelActivity"
            android:screenOrientation="portrait"
            android:restoreAnyVersion="true"
            android:theme="@android:style/Theme.Translucent"
			android:configChanges="orientation|keyboard|keyboardHidden" >
        </activity>
    </application>

</manifest>
